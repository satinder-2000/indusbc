<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        version="3.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/ejb-jar_3_2.xsd">
    
    <enterprise-beans>
        <session>
            <display-name>EmailEjb</display-name>
            <ejb-name>EmailEjb</ejb-name>
            <ejb-class>org.indusbc.ejbs.EmailEjb</ejb-class>
            <env-entry>
                <env-entry-name>mailSMTPHost</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>smtp.livemail.co.uk</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>mailSMTPPort</env-entry-name>
                <env-entry-type>java.lang.Integer</env-entry-type>
                <env-entry-value>587</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>mailSMTPAuth</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>smtpStartTlsEnabled</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>mailSMTPUser</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>contact@bjmanch.org</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>sender</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>admin@indusbc.org</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>password</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>Wether@lDr69</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>webURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>http://localhost:8080/indusbc/</env-entry-value>
            </env-entry>
           <env-entry>
                <env-entry-name>createAccessURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>createAccess.xhtml?email=%s</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>loginURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>login.xhtml</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>passwordResetURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>passwordReset.xhtml</env-entry-value>
            </env-entry>
        </session>
    </enterprise-beans>

</ejb-jar>
